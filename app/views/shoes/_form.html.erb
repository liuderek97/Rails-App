<%= simple_form_for(@shoe) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :brand %>
    <%= f.input :description %>
    <%= f.input :price %>
    <%= f.input :size %>
    <%= f.input :release_date, start_year: Date.today.year - 1, end_year: Date.today.year + 1, label: "Release Date"  %>
    <%= f.file_field :pictures, multiple: true %>
    
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
